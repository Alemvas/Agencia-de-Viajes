<div class="container pt-5">
    @if (Utils.IsAdmin(Context.Session))
    {
        <div class="row">
            <div class="col-md-6 mb-3">
                <a href="@Url.Action("Agregar", "Destinos")" class="btn btn-dark">Nuevo destino</a>
            </div>
        </div>
    }
    <div class="row">
        @foreach (var destino in Model)
        {
            <div class="col-md-6">
                <div class="card mb-3" style="max-height: 400px;">
                    <div class="row g-0">
                        <div class="col-md-8">
                            <img src="@destino.Imagen" class="img-fluid rounded-start" style="max-width: 400px; height: auto;" alt="...">
                        </div>
                        <div class="col-md-4">
                            <div class="card-body">
                                <h5 class="card-title">@destino.Nombre</h5>
                                <p class="card-text">Pais: @destino.Pais</p>
                                <p class="card-text">Zona: @destino.Zona</p>
                                <a href="@Url.Action("Details", "Destinos", new { id = destino.DestinoID })" class="btn btn-dark">Ver Detalles</a>
                                @if (Utils.IsAdmin(Context.Session))
                                {
                                    <a href="@Url.Action("Editar", "Destinos", new { id = destino.DestinoID })" class="my-2 btn btn-dark">Editar</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
