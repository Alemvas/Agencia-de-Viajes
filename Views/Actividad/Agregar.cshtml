<h1 class="display-3 fw-bold text-center">Agregar actividad a este destino</h1>

<div class="container pt-5">
    <form action="@Url.Action("Agregar", "Actividad", new { id = @Model })" id="form" runat="server" class="form" method="post">
        <input type="number" value="@Model" name="destino_id" class="d-none" />
        <div class="form-group my-2">
            <label class="block">Nombre:</label>
            <input type="text" name="nombre" class="form-control" />
        </div>
        <div class="form-group my-2">
            <label class="block">Numero de días:</label>
            <input type="number" name="dias" class="form-control" />
        </div>
        <div class="form-group my-2">
            <label class="block">Precio:</label>
            <input type="number" name="precio" class="form-control" />
        </div>
        <div class="form-group my-2">
            <label class="block">Tipo de actividad:</label>
            <input type="text" name="tipo_actividad" class="form-control" />
        </div>
        <div class="form-group my-2">
            <input type="submit" value="Agregar" class="form-control btn btn-dark" />
        </div>
    </form>
</div>
